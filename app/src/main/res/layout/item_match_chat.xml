<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorPrimaryMidDark">

    <ImageView
        android:id="@+id/img_match_chat_hero"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:src="@drawable/dragon_knight_full"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chat_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:text="BunC"
        android:textColor="@color/colorSecondary"
        app:layout_constraintLeft_toRightOf="@id/img_match_chat_hero"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chat_username_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_username"
        app:layout_constraintLeft_toRightOf="@id/tv_chat_username"
        app:layout_constraintTop_toTopOf="@id/tv_chat_username" />

    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:singleLine="false"
        android:text="Hello"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@id/tv_chat_username_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chat_username" />

</android.support.constraint.ConstraintLayout>