<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileConstraint"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/colorPrimaryMidDark"
    android:elevation="6dp"
    app:layout_collapseMode="parallax"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userProfilePicture"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="28dp"
        android:paddingTop="12dp"
        app:civ_border_color="@color/colorSecondary"
        app:civ_border_width="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="BunC"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePicture"
        app:layout_constraintLeft_toRightOf="@+id/userProfilePicture"
        app:layout_constraintTop_toTopOf="@+id/userProfilePicture"
        app:layout_constraintVertical_bias="0.39999998" />

    <TextView
        android:id="@+id/winrate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="@string/winrate"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/losses_label" />

    <TextView
        android:id="@+id/winrate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56%"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/winrate_label"
        app:layout_constraintTop_toTopOf="@+id/losses_value" />

    <TextView
        android:id="@+id/wins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/wins"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/seperatorID"
        app:layout_constraintTop_toTopOf="@+id/userProfilePicture" />

    <TextView
        android:id="@+id/wins_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="303"
        android:textColor="@color/colorGreen"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/wins_label"
        app:layout_constraintTop_toBottomOf="@+id/wins_label" />

    <TextView
        android:id="@+id/losses_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/losses"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/wins_label"
        app:layout_constraintRight_toLeftOf="@+id/winrate_label"
        app:layout_constraintTop_toTopOf="@+id/wins_label" />

    <TextView
        android:id="@+id/losses_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="322"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/losses_label"
        app:layout_constraintTop_toTopOf="@+id/wins_value" />

    <TextView
        android:id="@+id/solo_mmr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/solo_mmr"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/wins_value"
        app:layout_constraintTop_toBottomOf="@+id/wins_value" />

    <TextView
        android:id="@+id/solo_mmr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2500"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/solo_mmr_label"
        app:layout_constraintTop_toBottomOf="@+id/solo_mmr_label" />

    <TextView
        android:id="@+id/est_mmr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="12dp"
        android:text="@string/est_mmr"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toRightOf="@+id/solo_mmr_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solo_mmr_label" />

    <TextView
        android:id="@+id/est_mmr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9000"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/est_mmr_label"
        app:layout_constraintTop_toBottomOf="@+id/est_mmr_label" />

    <View
        android:id="@+id/seperatorID"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="@+id/solo_mmr_value"
        app:layout_constraintLeft_toRightOf="@+id/userNameTV"
        app:layout_constraintTop_toTopOf="@+id/wins_label"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>